{
  "name": "resizer-box",
  "version": "1.1.2",
  "author": "Teo <teodor.cristian.s@gmail.com>",
  "license": "MIT",
  "description": "The resizer-box is a web component that helps you resize any HTML element in any direction you want.",
  "type": "module",
  "main": "./lib/resizer-box.min.js",
  "keywords": [
    "resizer-box",
    "resizer",
    "resize",
    "drag"
  ],
  "repository": {
    "url": "https://github.com/teodor-cristian/resizer-box"
  },
  "scripts": {
    "start:wds": "web-dev-server --open demo/ --node-resolve --watch",
    "start": "live-server --open=./demo --port=3003 --cors",
    "start:build": "live-server --open=./lib --port=3003 --cors",
    "start:demo:build": "live-server --open=./demo-build --port=3007 --cors",
    "build": "rollup -c rollup.conf.mjs",
    "build:demo": "rollup -c rollup-demo.conf.mjs",
    "test": "karma start karma.conf.cjs",
    "test:init": "karma init",
    "storybook": "storybook dev -p 6006 ./src",
    "build-storybook": "storybook build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "lint:prettier": "prettier \"**/*.{mjs,js,md,mdx,json}\" \"**/package.json\" --check --ignore-path .lintignore",
    "lint:eslint": "eslint ./src/**",
    "format:prettier": "prettier \"**/*.{mjs,js,md,mdx,json}\" \"**/package.json\" --write --ignore-path .lintignore"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.5.0",
    "@eslint/js": "^9.8.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-essentials": "^8.1.9",
    "@storybook/addon-links": "^8.1.9",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.3",
    "@storybook/blocks": "^8.1.9",
    "@storybook/test": "^8.1.9",
    "@storybook/web-components": "^8.1.9",
    "@storybook/web-components-webpack5": "^8.1.9",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "cypress": "^13.13.0",
    "eslint": "^9.8.0",
    "globals": "^15.9.0",
    "jasmine": "^5.1.0",
    "jasmine-core": "^5.1.2",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-firefox-launcher": "^2.1.3",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^5.1.0",
    "karma-opera-launcher": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-webpack": "^5.0.1",
    "lit": "^3.1.4",
    "live-server": "^1.2.2",
    "playwright-webkit": "^1.45.3",
    "prettier": "^3.3.3",
    "rollup": "^4.19.1",
    "storybook": "^8.1.9",
    "webpack": "^5.91.0"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
